<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <LinearLayout
      android:id="@+id/customViewLinearLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_alignParentTop="true">
      <com.jadeapps.bubbleapplication.OneDCustomView
          android:id="@+id/oneDCustomView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/cardview_shadow_start_color"
          android:paddingLeft="30dp"
          android:layout_alignParentTop="true"/>

      <com.jadeapps.bubbleapplication.TwoDCustomView
          android:id="@+id/twoDCustomView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="30dp"
          android:background="@color/cardview_shadow_end_color"
          android:layout_alignParentBottom="true"/>
  </LinearLayout>

    <LinearLayout
        android:id="@+id/informationLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/design_default_color_error"
        android:paddingBottom="300dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>

</RelativeLayout>